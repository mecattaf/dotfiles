# SMART MARKS SYSTEM (Lua-powered)
# Define the mark commands
set $mark-toggle lua ~/.config/scroll/scripts/smart-marks.lua toggle
set $mark-clear lua ~/.config/scroll/scripts/smart-marks.lua clear
set $mark-show lua ~/.config/scroll/scripts/smart-marks.lua show

# Mark bindings for keys 1-9 and 0
bindsym $mod+1 $mark-toggle 1
bindsym $mod+2 $mark-toggle 2
bindsym $mod+3 $mark-toggle 3
bindsym $mod+4 $mark-toggle 4
bindsym $mod+5 $mark-toggle 5
bindsym $mod+6 $mark-toggle 6
bindsym $mod+7 $mark-toggle 7
bindsym $mod+8 $mark-toggle 8
bindsym $mod+9 $mark-toggle 9
bindsym $mod+0 $mark-toggle 0

# Clear marks with Shift
bindsym $mod+Shift+1 $mark-clear 1
bindsym $mod+Shift+2 $mark-clear 2
bindsym $mod+Shift+3 $mark-clear 3
bindsym $mod+Shift+4 $mark-clear 4
bindsym $mod+Shift+5 $mark-clear 5
bindsym $mod+Shift+6 $mark-clear 6
bindsym $mod+Shift+7 $mark-clear 7
bindsym $mod+Shift+8 $mark-clear 8
bindsym $mod+Shift+9 $mark-clear 9
bindsym $mod+Shift+0 $mark-clear 0

# Show mark in overview with Ctrl
bindsym $mod+Ctrl+1 $mark-show 1
bindsym $mod+Ctrl+2 $mark-show 2
bindsym $mod+Ctrl+3 $mark-show 3
bindsym $mod+Ctrl+4 $mark-show 4
bindsym $mod+Ctrl+5 $mark-show 5
bindsym $mod+Ctrl+6 $mark-show 6
bindsym $mod+Ctrl+7 $mark-show 7
bindsym $mod+Ctrl+8 $mark-show 8
bindsym $mod+Ctrl+9 $mark-show 9
bindsym $mod+Ctrl+0 $mark-show 0
