{{- $service := .infrastructure.services.llama_swap }}
{{- if and $service.enabled $service.external_subdomain }}

# ─────────────────────────────────────────────────────────────────────────────
# {{ $service.description }}
# ─────────────────────────────────────────────────────────────────────────────

https://{{ $service.external_subdomain }}.{{ .tailscale.full_hostname }} {
    reverse_proxy {{ $service.hostname }}:{{ $service.port }} {
        # Standard proxy headers
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        
        # WebSocket support (for log streaming)
        header_up Connection {>Connection}
        header_up Upgrade {>Upgrade}
    }
    
    # Logging
    log {
        output file /var/log/caddy/llama-swap.log {
            roll_size 50mb
            roll_keep 3
        }
        format console
        level ERROR
    }
}

{{- end }}
