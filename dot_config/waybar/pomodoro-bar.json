{
    "name": "pomodoro-bar",
    "bar_id": "pomodoro",
    "layer": "top",
    "mode": "dock",
    "output": "eDP-2",
    "exclusive": true,
    "passthrough": false,
    "position": "bottom",
    "height": 10,
    "margin": 0,
    "spacing": 0,
    "modules-left": ["custom/pomodoro"],
    "modules-center":[], 
    "modules-right": [],
    
    "custom/pomodoro": {
        "exec": "~/.config/scroll/scripts/pomodoro waybar",
        "return-type": "json",
        "format": "{}",
        "tooltip": true,
        "interval": 1,
        "signal": 8,
        "on-click": "~/.config/scroll/scripts/pomodoro pause",
        "expand": true
    }
}
