{
    "name": "pomodoro-bar",
    "bar_id": "pomodoro",
    "layer": "bottom",
    "mode": "overlay",
    "output": "eDP-2",
    "exclusive": false,
    "passthrough": true,
    "position": "bottom",
    "height": 5,
    "margin": 0,
    "spacing": 0,
    "fixed-center": true,
    "modules-left": [],
    "modules-center": ["custom/pomodoro"],
    "modules-right": [],
    
    "custom/pomodoro": {
        "exec": "~/.config/scroll/scripts/pomodoro waybar",
        "return-type": "json",
        "format": " ",
        "tooltip": true,
        "interval": 1,
        "signal": 8,
        "on-click": "~/.config/scroll/scripts/pomodoro pause"
    }
}
