[Unit]
Description=GNOME Keyring daemon
Documentation=man:gnome-keyring-daemon(1)
PartOf=scroll-session.target
After=graphical-session-pre.target

[Service]
Type=simple
ExecStart=/usr/bin/gnome-keyring-daemon --foreground --components=secrets,ssh,pkcs11
Restart=on-failure
RestartSec=1
Slice=session-graphical.slice
# Kill only the main process, not child processes
KillMode=process

[Install]
WantedBy=scroll-session.target
