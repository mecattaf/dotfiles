#!/bin/bash

# Volume control script for Hyprland

case "$1" in
    up)
        amixer sset Master 5%+ && notify-send "ðŸ”Š Volume up" "$(amixer get Master | grep -oP '\[\d+%\]' | head -1 | tr -d '[]%')" -t 250
        ;;
    down)
        amixer sset Master 5%- && notify-send "ðŸ”‰ Volume down" "$(amixer get Master | grep -oP '\[\d+%\]' | head -1 | tr -d '[]%')" -t 250
        ;;
    mute)
        new_state=$(amixer sset Master toggle | awk '/\[off\]/ {print "mute"; exit} /\[on\]/ {gsub(/\[|\]/, "", $5); print "unmute " $5; exit}')
        if [[ "$new_state" == "mute" ]]; then
            notify-send "ðŸ”‡ Muted" -t 250
        else
            notify-send "ðŸ”Š Volume" "$(echo $new_state | cut -d" " -f2)%" -t 250
        fi
        ;;
    *)
        echo "Invalid option: $1"
        echo "Usage: $0 {up|down|mute}"
        exit 1
        ;;
esac
